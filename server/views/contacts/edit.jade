extends ../layout

block content
    .container-fluid
        .col-sm-6.col-sm-offset-3
            form.form-horizontal(method='post')
                fieldset
                    legend Редактиране
                .form-group
                    label.col-lg-2.control-label(for='contact-type') Тип контакт
                    .col-lg-4
                        input.form-control(type="text", id="contact-type", name='type', required, autofocus, autocomplete='off', value=contact.type)
                .form-group
                    label.col-lg-2.control-label(for='contact-content') Съдържание
                    .col-lg-4
                        input.form-control(type="text", id="contact-content", name='content', required, autocomplete='off', value=contact.content)
                .form-group
                    .col-lg-10.col-lg-offset-2
                        button.btn.btn-primary(type="submit") Редактирай