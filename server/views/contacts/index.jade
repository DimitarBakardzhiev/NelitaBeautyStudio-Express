extends ../layout

block content
    .container-fluid
        .col-md-6
            if contacts.length > 0
                table.table.table-striped.table-hover
                    tbody
                        each contact in contacts
                            tr
                                td= contact.type
                                td= contact.content
                                if isAdmin
                                    td
                                        a(href="/contacts/edit/" + contact.id).btn.btn-warning.btn-xs Редактиране
                                    td
                                        a(href="/contacts/delete/" + contact.id, onclick='return confirm_delete()').btn.btn-danger.btn-xs Изтрий
            else
                h1 Няма въведени контакти
            if isAdmin
                a(href="/contacts/create/").btn.btn-info Добави
        .col-md-6
            iframe(width='100%', height='450px', frameborder="0", scrolling="no", src="http://www.bgmaps.com/link/map/5BFE00101CD68C82E30F06863A461CDF")

    script(src='/js/confirm.js')