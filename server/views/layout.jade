doctype html
html
    head
        meta(charset='uft-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Салон за красота "Нелита"
        link(rel='stylesheet', href='/css/bootstrap.united.css')
        link(rel='stylesheet', href='/css/creative.css')
    body
        html
            body
                nav.navbar.navbar-inverse
                    .container-fluid
                        .navbar-header
                            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href='/') Салон за красота "Нелита"
                        div(id='bs-example-navbar-collapse-2').collapse.navbar-collapse
                            ul.nav.navbar-nav
                                li
                                    a(href='/pricelist/all') Услуги
                                li
                                    a(href='/contacts') Контакти
                                if isAdmin
                                    li.dropdown
                                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                            | Админ
                                            span.caret
                                        ul.dropdown-menu(role='menu')
                                            li
                                                a(href='/auth/roles') Потребителски роли
                                            li
                                                a(href='/pricelist/create') Нов ценоразпис
                                            li
                                                a(href='/auth/changePassword') Смяна на парола
                            ul.nav.navbar-nav.navbar-right
                                li
                                    if authenticated
                                        a(href='/auth/logout')
                                            span.glyphicon.glyphicon-off  Изход
                                    else
                                        a(href='/auth/login')
                                            span.glyphicon.glyphicon-log-in  Влез


        block content

        script(src='/js/jquery.js')
        script(src='/js/bootstrap.js')